@using System
@using System.Configuration
@using MySqlConnector


@functions{

    public static int GetCountCateByName(string name)
    {
        int count = 0;
        string connStr = ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString;
        using (MySqlConnection conn = new MySqlConnection(connStr))
        {
            conn.Open();
            string query = "SELECT COUNT(*) FROM catart WHERE cate = @nombre";
            using (MySqlCommand cmd = new MySqlCommand(query, conn))
            {
                cmd.Parameters.AddWithValue("@nombre", name);
                count = Convert.ToInt32(cmd.ExecuteScalar());
            }
        }
        return count;
    }

}
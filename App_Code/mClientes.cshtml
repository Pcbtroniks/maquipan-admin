@using System;
@using System.Web;
@using System.IO;
@using System.Configuration;
@using MySqlConnector;

@functions{

    public static string getInfoCustomer(string id, string columna)
    {
        string respuesta = "";

        try
        {
            using (var CONN = new MySqlConnection(ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString))
            {
                CONN.Open();
                using (var CMD = new MySqlCommand("SELECT * FROM clientes WHERE id = @varId LIMIT 1", CONN))
                {
                    CMD.Parameters.AddWithValue("@varId", id);
                    var DATOS = CMD.ExecuteReader();
                    while (DATOS.Read())
                    {
                        respuesta = DATOS[columna].ToString();
                    }
                }
            }
        }
        catch (MySqlException ex)
        {
            respuesta = ex.Message;

        }
        return respuesta;
    }

}
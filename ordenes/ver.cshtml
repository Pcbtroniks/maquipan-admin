@using System;
@using System.Web;
@using System.IO;
@using System.Configuration;
@using MySqlConnector;
@{ 

    string idCliente = "", estatus = "", noAprobacion = "", e_id = "";
    decimal total = 0;

    using (MySqlConnection CONN = new MySqlConnection(ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString))
    {
        CONN.Open();
        using (MySqlCommand CMD = new MySqlCommand("SELECT * FROM ordenes WHERE id = @varOrden LIMIT 1", CONN))
        {
            CMD.Parameters.AddWithValue("@varOrden", UrlData[0].ToString());
            using (MySqlDataReader DATOS = CMD.ExecuteReader())
            {
                while (DATOS.Read())
                {
                    idCliente = DATOS["id_cliente"].ToString();
                    estatus = DATOS["estatus"].ToString();
                    noAprobacion = DATOS["payment_id"].ToString();
                    e_id = DATOS["e_id"].ToString();
                }
            }
        }
    }
}


                                                                {
                                                                    CONN.Open();
                                                                    using (MySqlCommand CMD = new MySqlCommand("SELECT * FROM artvent WHERE orden = @varOrden ", CONN))
                                                                    {
                                                                        CMD.Parameters.AddWithValue("@varOrden", UrlData[0]);
                                                                        using (MySqlDataReader DATOS = CMD.ExecuteReader())
                                                                        {
                                                                            while (DATOS.Read())
                                                                            {
                                                                                decimal Monto = Convert.ToDecimal(DATOS["precio"]) * Convert.ToDecimal(DATOS["cantidad"]);
                                                                                total = total + Monto;

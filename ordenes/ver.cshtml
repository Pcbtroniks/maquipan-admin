                                                        using (MySqlConnection CONNc = new MySqlConnection(ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString))
                                                        {
                                                            CONNc.Open();
                                                            using (MySqlCommand CMDc = new MySqlCommand("SELECT * FROM clientes WHERE id = @varIdCliente ", CONNc))
                                                            {
                                                                CMDc.Parameters.AddWithValue("@varIdCliente", idCliente);
                                                                using (MySqlDataReader DATOc = CMDc.ExecuteReader())
                                                                {
                                                                    while (DATOc.Read())
                                                                    {
                                                                        <li>
                                                                            <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Nombre : </span>@DATOc["nombre"] @DATOc["paterno"] @DATOc["materno"]</div>
                                                                        </li>
                                                                        <li>
                                                                            <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Correo : </span><a href="javascript:void(0);" class="text-primary">@DATOc["correo"]</a></div>
                                                                        </li>
                                                                        <li>
                                                                            <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Movil : </span>@DATOc["movil"]</div>
                                                                        </li>
                                                                    }
                                                        }
                                                            }
                                                        }
                                                    }

                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="card custom-card overflow-hidden">
                                            <div class="card-header">
                                                <div class="card-title">
                                                    Ubicacion de envios
                                                </div>
                                            </div>
                                            <div class="card-body p-0">
                                                <div class="p-3">
                                                    <ul class="list-unstyled order-details-list">
                                                        @{
                                                            using (MySqlConnection CONNc = new MySqlConnection(ConfigurationManager.ConnectionStrings["SDNS"].ConnectionString))
                                                            {
                                                                CONNc.Open();
                                                                using (MySqlCommand CMDc = new MySqlCommand("SELECT * FROM fichas_ubicaciones WHERE id_cliente = @varIdCliente ", CONNc))
                                                                {
                                                                    CMDc.Parameters.AddWithValue("@varIdCliente", idCliente);
                                                                    using (MySqlDataReader DATOc = CMDc.ExecuteReader())
                                                                    {
                                                                        while (DATOc.Read())
                                                                        {
                                                                            <li>
                                                                                <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Recibe: </span>@DATOc["nombre"]</div>
                                                                            </li>
                                                                            <li>
                                                                                <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Calle: </span>@DATOc["colonia"] @DATOc["exterior"] @DATOc["interior"]</div>
                                                                            </li>
                                                                            <li>
                                                                                <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Ciudad: </span>@DATOc["municipio"]</div>
                                                                            </li>
                                                                            <li>
                                                                                <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Colonia: </span>@DATOc["colonia"]</div>
                                                                            </li>
                                                                            <li>
                                                                                <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Estado: </span>@DATOc["estado"]</div>
                                                                            </li>
                                                                            <li>
                                                                                <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Codigo postal: </span>@DATOc["cp"]</div>
                                                                            </li>
                                                                            <li>
                                                                                @if (DATOc["cruces"].ToString() != "")
                                                                                {
                                                                                    <div class="fs-14 text-muted"><span class="me-2 text-default fw-semibold">Cruces: </span>@DATOc["cruces"]</div>
                                                                                }
